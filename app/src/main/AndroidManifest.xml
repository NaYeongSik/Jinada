<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:name=".common.JinadaApplication"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jinada"
        tools:targetApi="31">
        <meta-data
            android:name="com.naver.maps.map.NCP_KEY_ID"
            android:value="${NAVER_MAP_CLIENT_ID}"/>

        <receiver
            android:name=".presentation.receiver.ActivityRecognitionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="ACTION_ACTIVITY_TRANSITION_UPDATE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".presentation.receiver.GeoFencingReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="ACTION_GEOFENCE_TRANSITION" />
            </intent-filter>
        </receiver>

        <service android:name=".presentation.service.CurrentLocationService"
            android:foregroundServiceType="location"/>
        <service android:name=".presentation.service.ActivityRecognitionService"
            android:foregroundServiceType="location"/>
        <service android:name=".presentation.service.GeoFensingNotificationService"
            android:foregroundServiceType="location"/>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.Jinada">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="jinada" android:host="main" />
            </intent-filter>

        </activity>
        <profileable android:shell="true"/>
    </application>

</manifest>